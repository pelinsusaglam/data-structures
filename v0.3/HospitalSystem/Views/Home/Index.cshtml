@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Carousel Section -->
<div id="mainCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/hospital-main.jpg" class="d-block w-100" alt="Hastane Ana Görünüm">
            <div class="carousel-caption">
                <h3>Bursa Uludağ Üniversitesi Hastanesi</h3>
                <p>Modern tıp teknolojisi ile hizmetinizdeyiz</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/doctors-team.jpg" class="d-block w-100" alt="Doktor Ekibimiz">
            <div class="carousel-caption">
                <h3>Uzman Kadromuz</h3>
                <p>Deneyimli doktor kadromuz ile yanınızdayız</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/emergency.jpg" class="d-block w-100" alt="Acil Servis">
            <div class="carousel-caption">
                <h3>7/24 Acil Servis</h3>
                <p>Kesintisiz sağlık hizmeti</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Quick Access Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="quick-access-card">
            <i class="bi bi-calendar-check"></i>
            <h5>Online Randevu</h5>
            <p>Hızlı ve kolay randevu alma</p>
            <a href="#" class="btn btn-primary">Randevu Al</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="quick-access-card">
            <i class="bi bi-file-medical"></i>
            <h5>Laboratuvar Sonuçları</h5>
            <p>Test sonuçlarınızı görüntüleyin</p>
            <a href="#" class="btn btn-primary">Sonuçları Gör</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="quick-access-card">
            <i class="bi bi-search"></i>
            <h5>Doktor Arama</h5>
            <p>Uzman doktorlarımızı bulun</p>
            <a href="#" class="btn btn-primary">Doktor Ara</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="quick-access-card">
            <i class="bi bi-hospital"></i>
            <h5>Poliklinikler</h5>
            <p>Bölümlerimiz hakkında bilgi alın</p>
            <a href="#" class="btn btn-primary">Detaylar</a>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="stats-card">
            <div class="row text-center">
                <div class="col-md-3">
                    <div class="stats-number">1000+</div>
                    <p>Yatak Kapasitesi</p>
                </div>
                <div class="col-md-3">
                    <div class="stats-number">500+</div>
                    <p>Uzman Doktor</p>
                </div>
                <div class="col-md-3">
                    <div class="stats-number">50+</div>
                    <p>Poliklinik</p>
                </div>
                <div class="col-md-3">
                    <div class="stats-number">2M+</div>
                    <p>Yıllık Hasta</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- News and Announcements -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-megaphone me-2"></i>Duyurular</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">COVID-19 Aşı Randevuları</h6>
                            <small>2 gün önce</small>
                        </div>
                        <p class="mb-1">Yeni dönem aşı randevuları açılmıştır.</p>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Yeni Poliklinik Açılışı</h6>
                            <small>1 hafta önce</small>
                        </div>
                        <p class="mb-1">Göz Hastalıkları Polikliniği yeni binasında hizmete başlamıştır.</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-newspaper me-2"></i>Haberler</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Başarılı Karaciğer Nakli</h6>
                            <small>3 gün önce</small>
                        </div>
                        <p class="mb-1">Hastanemizde gerçekleştirilen başarılı karaciğer nakli operasyonu.</p>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Tıp Fakültesi Başarısı</h6>
                            <small>5 gün önce</small>
                        </div>
                        <p class="mb-1">Fakültemiz uluslararası başarı sıralamasında ilk 100'e girdi.</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FAQ Accordion -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-question-circle me-2"></i>Sıkça Sorulan Sorular</h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                Nasıl randevu alabilirim?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Online randevu sistemimiz üzerinden veya MHRS üzerinden kolayca randevu alabilirsiniz.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                Ziyaret saatleri nelerdir?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Ziyaret saatleri her gün 13:00-15:00 ve 19:00-20:00 saatleri arasındadır.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                Laboratuvar sonuçlarımı nasıl görebilirim?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                e-Nabız sistemi üzerinden veya hastanemizin online sonuç sisteminden sonuçlarınızı görüntüleyebilirsiniz.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hospital Info Accordion -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-hospital me-2"></i>Hastane Bilgileri</h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="hospitalInfo">
                    @await Html.PartialAsync("_HospitalInfoAccordion")
                </div>
            </div>
        </div>
    </div>
</div>
