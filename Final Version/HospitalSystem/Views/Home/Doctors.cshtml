@{
    ViewData["Title"] = "Doktor Listesi";
}

<div class="container mt-4">
    <h2 class="mb-4">Doktor Listesi</h2>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Uzman Doktorlarımız</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Kardiyoloji -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="bi bi-heart-pulse me-2"></i>Kardiyoloji</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Dr. Ahmet Yılmaz</li>
                                        <li class="list-group-item">Dr. Ayşe Demir</li>
                                        <li class="list-group-item">Dr. Mehmet Kaya</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Dahiliye -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="bi bi-hospital me-2"></i>Dahiliye</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Dr. Elif Çelik</li>
                                        <li class="list-group-item">Dr. Can Yüce</li>
                                        <li class="list-group-item">Dr. Zeynep Şahin</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Genel Cerrahi -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0"><i class="bi bi-scissors me-2"></i>Genel Cerrahi</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">Dr. Ali Öztürk</li>
                                        <li class="list-group-item">Dr. Fatma Yıldız</li>
                                        <li class="list-group-item">Dr. Kemal Arslan</li>
                                        <li class="list-group-item">Dr. Selin Akar</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> <!-- row -->
                </div>
            </div>
        </div>
    </div>

    <!-- Bilgilendirme -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Bilgilendirme</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        <strong>Not:</strong> Doktorlarımızın randevu saatleri ve detaylı bilgileri için ilgili bölüm sekreterliklerine başvurabilirsiniz.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
