<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bursa Uludağ Üniversitesi Hastanesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/uludag-logo.png" alt="Uludağ Üniversitesi Logo" height="50" class="me-2" />
                    <span>Bursa Uludağ<br/>Üniversitesi Hastanesi</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Patient" asp-action="Add">
                                <i class="bi bi-person-plus me-1"></i>Hasta Ekle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Patient" asp-action="List">
                                <i class="bi bi-people me-1"></i>Hasta Listesi
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            <div class="fade-in">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start">
                    <img src="/images/uludag-logo.png" alt="Uludağ Üniversitesi Logo" height="40" class="mb-2" />
                </div>
                <div class="col-md-4 text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year - Bursa Uludağ Üniversitesi Hastanesi</p>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
                        <i class="bi bi-shield-lock me-1"></i>Gizlilik Politikası
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
