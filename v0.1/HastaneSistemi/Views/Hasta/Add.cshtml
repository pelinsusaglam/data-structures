@model HastaneSistemi.Models.Hasta

@{
    ViewBag.Title = "Yeni Hasta Kaydı";
}

<h2>Yeni Hasta Ekle</h2>

<form asp-action="Add" method="post" class="mt-4">

    <div class="form-group mt-2">
        <label for="TCno">TC Kimlik Numarası:</label>
        <input asp-for="TCno" class="form-control" required />
    </div>

    <div class="form-group mt-2">
        <label for="AdSoyad">Ad Soyad:</label>
        <input asp-for="AdSoyad" class="form-control" required />
    </div>

    <div class="form-group mt-2">
        <label for="Priority">Risk Önceliği (1: çok kritik, 5: stabil):</label>
        <input asp-for="Priority" class="form-control" type="number" min="1" max="5" required />
    </div>

    <div class="form-group mt-2">
        <label for="Durum">Durum</label>
        <input asp-for="Durum" class="form-control" required />
    </div>
    <div class="form-group mt-2"></div>
        <label asp-for="VakaNo" class="form-label"></label>
        <input asp-for="VakaNo" class="form-control" />
        <span asp-validation-for="VakaNo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3">Hasta Kaydet</button>

</form>

@* Formdaki hata mesajlarını göstermek için: *@
@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(x => x.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
